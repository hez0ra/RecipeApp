<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners20"
    android:elevation="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_users_ava"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="60dp"
        android:src="@drawable/ava"
        android:layout_height="60dp"/>

        <TextView
            android:id="@+id/view_users_username"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Username: "
            android:paddingStart="10dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="24sp"
            android:autoSizeMinTextSize="16sp"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/view_users_btn_delete"
            android:layout_width="50dp"
            android:src="@drawable/trash_can"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/view_users_email"
        android:layout_width="match_parent"
        android:text="Email:"
        android:paddingTop="5dp"
        android:paddingHorizontal="10dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/view_users_isadmin"
        android:layout_width="match_parent"
        android:text="Admin:"
        android:paddingTop="5dp"
        android:paddingHorizontal="10dp"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/view_users_btn_admin"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Сделать админом"
        android:layout_height="50dp"/>

</LinearLayout>