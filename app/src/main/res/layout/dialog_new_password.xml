<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="40dp"
    android:background="@drawable/rounded_corners20"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/dialog_cansel"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cancel" />

    <EditText
        android:id="@+id/dialog_old_password"
        android:hint="Старый пароль"
        android:inputType="textPassword"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/dialog_new_password1"
        android:hint="Новый пароль"
        android:inputType="textPassword"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/dialog_new_password2"
        android:hint="Подтверждение нового пароля"
        android:inputType="textPassword"

        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:text="Подтвердить" />
</LinearLayout>